
<%= form_for [:dashboard, @item] do |f| %>

  <div class="form-group">
  <%= f.label :name, 'Name', class: 'col-sm-1' %>
   <div class="col-sm-2">
    <%= f.text_field :name, class: 'form-control col-sm-4 inline'%>
    </div>
  </div>

  <div class="form-group ">
    <%= f.label :health, class: 'col-sm-1' %>
    <div class="col-sm-2">
      <%= f.text_field :health, class: 'form-control inline'%>
    </div>
  </div>

  <div class="form-group ">
  <%= f.label :description,  class: 'col-sm-1' %>
  <div class="col-sm-2">
      <%= f.text_field :description, class: 'form-control inline'%>
  </div>

  </div>


  <div class="form-group">
    <%= f.submit %>
  </div>

<% end %>
