<p id="notice"><%= notice %></p>

<h1>Items</h1>

<div id="new-monster-title">
  <h3>Click here to upload your own item</h3>
  <%= link_to 'New Item', new_dashboard_item_path, class: 'btn btn-primary'  %>
</div>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>


      <tr>
        <td>
          <%= image_tag 'slug.gif', size: "200" %>
        </td>
        <td>
        <span> Name: </span><%= item.name %>
        <br>
        <span> health: </span><%= item.health %>
        <br>
        <span> description: </span><%= item.description %>
        <br>

       </td>


      </tr>
    <% end %>
  </tbody>
</table>

<br>
